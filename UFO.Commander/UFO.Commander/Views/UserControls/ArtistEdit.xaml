<UserControl x:Class="UFO.Commander.Views.UserControls.ArtistEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UFO.Commander.Views.UserControls"
             xmlns:viewModel="clr-namespace:UFO.Commander.ViewModel"
             xmlns:entities="clr-namespace:UFO.Commander.ViewModel.Entities"
             d:DataContext="{d:DesignInstance Type=entities:ArtistViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label Content="Name" />
            <TextBox Text="{Binding Name}" />
            <Label Content="EMail" />
            <TextBox Text="{Binding EMail}" />
            <Label Content="Category" />
            <ComboBox ItemsSource="{Binding Path=ArtistOverviewViewModel.Categories, Source={StaticResource Locator}}" 
                      SelectedItem="{Binding CategoryViewModel}" />
            <Label Content="Country" />
            <ComboBox ItemsSource="{Binding Path=ArtistOverviewViewModel.Countries, Source={StaticResource Locator}}"
                      SelectedItem="{Binding CountryViewModel}" />
            <Label Content="Upload Video" />
            <TextBox Text="{Binding PromoVideo}" />
        </StackPanel>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <Image Height="200" Width="200" />
            <Button Content="Upload Image" />
        </StackPanel>

        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                Content="Save"
                Command="{Binding Path=ArtistOverviewViewModel.SaveCommand, Source={StaticResource Locator}}"
                CommandParameter="{Binding}"
                Visibility="{Binding Path=SaveButtonVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}" />

    </Grid>
</UserControl>
